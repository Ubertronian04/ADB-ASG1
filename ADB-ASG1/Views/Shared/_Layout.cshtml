<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ADB_ASG1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ADB eBank</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @if (Context.Session.GetString("CustId") != null)
                    {
                        <div class="nav-item text-right">
                            <a class="nav-link text-black-50 border my-1 mx-sm-2 p-2" asp-area="" asp-controller="Home" asp-action="LogOut">Log Out</a>
                        </div>
                    }
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    @if (Context.Session.GetString("CustId") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Index">Account</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="ViewCreditCard">Credit Card</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="MonthlyStatement" asp-action="Index">Monthly Statement</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Create">Create Account</a>
                        </li>
                    }
                </ul>
                </div>
            </div>
        </nav>
        <div class="border p-3 text-center bg-primary row position-absolute w-100" id="monthlyCSSWrapper" aria-hidden="true" style="display:none;">
            <div class="col-1"></div>
            <a class=" col-10 nav-link text-white font-weight-bold" onclick="closeBanner()" asp-action="Index" asp-controller="MonthlyStatement">Your monthly bank statement has been processed. Click here to view it.</a>
            <button class="col-1 close text-white" id="bannerClose" onclick="closeBanner()" aria-label="Close">&times;</button>
        </div>
    </header>
    <div class="container w-100 h-100">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 
            <script>
                document.write(new Date().getFullYear())
            </script> ADB - Team 1 | Developed by Chiam Wei, Nathaniel Tong and Daniel Chan
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
