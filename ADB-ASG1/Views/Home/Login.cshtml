
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center align-items-center" style="min-height:80vh;">
    <form asp-controller="Home" asp-action="Login" method="post" class="col-md-4 border rounded p-3 m-2 text-muted">
        <h4 class="p-2 text-center">Login</h4>
        <fieldset class="p-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input name="username" id="username" class="form-control-plaintext border pl-2" placeholder="Username" />
            </div>
            <div class="form-group">
                <input name="password" id="password" type="password" class="form-control-plaintext border pl-2" placeholder="Password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-light border w-100" />
            </div>
            <a href="#" class="text-decoration-none" style="font-size:small">Forgot password?</a>
            <span class="text-danger" style="font-size:small">@TempData["LoginError"]</span>
        </fieldset>
    </form>
</div>
